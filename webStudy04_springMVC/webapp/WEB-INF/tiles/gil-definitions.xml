<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd" >
<tiles-definitions>
  <definition name="super" template="/WEB-INF/views/template.jsp" >
  	<put-attribute name="title" value="Company 302"/>
  	<put-attribute name="preScript" value="/includee/preScript.jsp"/>
  	<put-attribute name="headerMenu" value="/includee/headerMenu.jsp"/>
  	
  	<put-attribute name="footer" value="/includee/footer.jsp"/>
  	<put-attribute name="postScript" value="/includee/postScript.jsp"/>
  </definition>
  
<!--  *(뎁스구조가 1단계니까) 1을 적어준다. index -->
  <definition name="board/*"  extends="super" preparer="boardViewPreparer">
  	<put-attribute name="content" value="/WEB-INF/views/board/{1}.jsp"></put-attribute>
  </definition>
  <definition name="prod/*"  extends="super" preparer="">
  	<put-attribute name="content" value="/WEB-INF/views/prod/{1}.jsp"></put-attribute>
  </definition>
  <definition name="member/*"  extends="super" >
  	<put-attribute name="content" value="/WEB-INF/views/member/{1}.jsp"></put-attribute>
  </definition>
  
  <definition name="index"  extends="super" >
  	<put-attribute name="content" value="/index.jsp"></put-attribute>
  </definition>
  
</tiles-definitions>
